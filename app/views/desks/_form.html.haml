= form_for @desk do |f|
  -if @desk.errors.any?
    #error_explanation
      %h2= "#{pluralize(@desk.errors.count, "error")} prohibited this desk from being saved:"
      %ul
        - @desk.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :options
    = f.text_area :options
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
